@model MyCms.Application.Services.News.Query.GetDetailNewsForSite.GetDetailNewsForSiteDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/owl.carousel.css">
    <link rel="stylesheet" href="css/owl.theme.default.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>


    <div class="single_post">
        <div class="container-fluid">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <div class="post_img">
                            <img src="img/696112501123546.jpg" alt="">
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
                <div class="posts_meta text-center">
                    <span><i class="fa fa-comment-o"></i> 25 نظر</span>
                    <span><i class="fa fa-archive"></i> @Model.Category</span>
                    <span><i class="fa fa-calendar"></i> @Model.CreateDate</span>
                </div>
                <div class="post_content">
                    <h4>| @Model.Title</h4>
                    <p>@Model.ShortDescription </p>


                    <div class="col-md-6">
                        <div class="main-slider-box">
                            <div class="owl-carousel owl-theme main-slider">
                                @foreach (var item in Model.Images)
                                {
                                    <div class="item">
                                        <figure>
                                            <img src="~/@item" alt="">
                                            <figcaption class="gradient-fig"></figcaption>
                                            <figcaption class="desc-fig">

                                            </figcaption>
                                        </figure>
                                    </div>
                                }


                            </div>
                        </div>
                    </div><br /><br /><br /><br /><br /><br />
                    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
                    <p>@Model.Text</p>
                    <button onclick="AddLike('@Model.NewsID', '@ViewBag.UserID')" class="btn btn-blue-grey">لایک</button>
                    <br />
                    <button onclick="DisLike('@Model.NewsID', '@ViewBag.UserID')" class="btn btn-blue-grey">دیس لایک</button>
                    <br />
                    <p class="btn btn-blue-grey">تعداد لایک ها : @Model.LikeCount </p>
                    <h5>دیدگاه شما </h5>
                    <form>
                        <div class="form-row">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="نام شما">
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control" placeholder="ایمیل">
                            </div>
                            <div class="col-md-12">
                                <textarea class="form-control" placeholder="نظر شما ..."></textarea>
                            </div>
                            <div class="col-md-12">
                                <div class="text-left">
                                    <button class="btn btn-primary">ثبت نظر</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="bg"></div>
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/index.js"></script>
</body>
@section Script
{
    <link href="~/SweetAlert/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/SweetAlert/sweetalert2.min.js"></script>
    <script>
        function AddLike(newsID,userID) {
            swal.fire({
               
                text: "مطمِئنید؟",
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'ادامه',
                cancelButtonText: 'لغو'
            }).then((result) => {
                if (result.value) {

                   

                    var postData = {
                        'newsID': newsID,
                        'userID': userID
                    };

                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                        url: "/News/AddLike",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });


                            }
                            else {

                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );

                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }

                    });

                }
            })
        }


        function DisLike(newsID, userID) {
            swal.fire({

                text: "مطمِئنید؟",
                icon: 'info',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'ادامه',
                cancelButtonText: 'لغو'
            }).then((result) => {
                if (result.value) {



                    var postData = {
                        'newsID': newsID,
                        'userID': userID
                    };

                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "POST",
                        url: "/News/DisLike",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });


                            }
                            else {

                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );

                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }

                    });

                }
            })
        }
    </script>
}
</html>

